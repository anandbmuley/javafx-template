    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="name" promptText="Enter your name" />
    <Button onAction="#handleOnSave" text="SAVE" />
   <Label fx:id="successMessage" text="Details saved successfully" textFill="#33da33" />
</VBox>
